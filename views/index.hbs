<div class="container">
    <div class="text-center mb-4">
        <h1>Weather Dashboard</h1>
        <form class="form-inline justify-content-center">
            <input class="form-control mr-2" type="search" placeholder="Enter city or address" aria-label="Search">
            <button class="btn btn-primary" type="submit">Search</button>
        </form>
    </div>
    <div id="errorDiv" class="alert alert-danger" role="alert" style="display: none;">

    </div>

    <div id="weatherDetails" style="display: none;">
        <div class="card text-center">




            <div class="card-header">
                <h3 id="address"></h3>
            </div>
            <div class="card-body">
                <h5 class="card-title">Current Temperature: <span id="currentTemprecher"></span></h5>
                <p class="card-text">Feels Like: <span id="feelLike"></span></p>
                <p class="card-text">Min Temperature: <span id="minTemperature"></span></p>
                <p class="card-text">Max Temperature: <span id="maxTemperature"></span></p>
                <p class="card-text">Humidity: <span id="humidity"></span></p>
                <p class="card-text">Pressure: <span id="pressure"></span></p>
                <p class="card-text">Cloud Cover: <span id="cloudCover"></span></p>
                <p class="card-text">Visibility: <span id="visibility"></span></p>
                <p class="card-text">Wind Speed: <span id="windSpeed"></span></p>
            </div>
            <div class="card-footer text-whit">
                Sunrise: <span id="sunrise"></span> | Sunset: <span id="sunset"></span>
            </div>
        </div>
    </div>
</div>
<script src="/js/app.js"></script>
